<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on the any flag below to continue to quiz"
        android:layout_above="@id/gridLayout"
        android:layout_marginBottom="30dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textFontWeight="1"
        android:layout_marginLeft="10dp"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@drawable/gridborder"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgnigeria"
            android:src="@drawable/nigeriaFlag"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:onClick="clickNig"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imggeorgia"
            android:src="@drawable/georgiaFlag"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="clickGeorgia"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgcanada"
            android:src="@drawable/canadaflag"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="clickCanada"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgchina"
            android:src="@drawable/chinaFlag"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:onClick="clickChina"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgmarcedonia"
            android:src="@drawable/marcedoniaFlag"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="clickMarcedonia"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgsouthAfrica"
            android:src="@drawable/southAfricaFlag"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="clickSouthAfrica"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imghaiti"
            android:src="@drawable/haitiFlag"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:onClick="clickHaiti"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgaustria"
            android:src="@drawable/austriaFlag"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="clickAustria"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imgfrance"
            android:src="@drawable/frenchFlag"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="clickFrance"/>


    </GridLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>